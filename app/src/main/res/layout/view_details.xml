<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wet_glass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/passport"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txtVName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="School"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txtVSchool"
                android:layout_below="@+id/txtVName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:id="@+id/txtVDept"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/txtVSchool"
                android:layout_below="@+id/txtVName"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>